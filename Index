    <script>
        // Initial metrics
        let metrics = {
            rotation: 65,
            debris: 28,
            vorticity: 42,
            hail: 15
        };

        // Function to update display and alert
        function updateMetrics() {
            document.getElementById('rotation-strength').textContent = `Rotation Strength: ${Math.round(metrics.rotation)}%`;
            
            const debrisElem = document.getElementById('debris-concentration');
            debrisElem.textContent = `Debris Concentration: ${Math.round(metrics.debris)}%`;
            const alertElem = document.getElementById('alert');
            
            if (metrics.debris < 30) {
                debrisElem.className = 'text-green-400';
                alertElem.textContent = 'Alert: Low Debris Risk';
                alertElem.parentElement.className = 'alert-bar mt-8 w-full max-w-md bg-gray-700';
            } else if (metrics.debris <= 50) {
                debrisElem.className = 'text-yellow-400';
                alertElem.textContent = 'Alert: Moderate Debris Risk';
                alertElem.parentElement.className = 'alert-bar mt-8 w-full max-w-md bg-yellow-900';
            } else {
                debrisElem.className = 'text-red-400';
                alertElem.textContent = 'Alert: High Debris Risk';
                alertElem.parentElement.className = 'alert-bar mt-8 w-full max-w-md bg-red-900';
            }
            
            document.getElementById('vorticity').textContent = `Vorticity: ${Math.round(metrics.vorticity)} m/s`;
            document.getElementById('hail-probability').textContent = `Hail Probability: ${Math.round(metrics.hail)}%`;
        }

        // Fake data refresh every 12 seconds
        setInterval(() => {
            metrics.rotation = Math.max(0, Math.min(100, metrics.rotation + (Math.random() * 10 - 5)));
            metrics.debris = Math.max(25, Math.min(40, metrics.debris + (Math.random() * 6 - 3)));
            metrics.vorticity = Math.max(0, Math.min(100, metrics.vorticity + (Math.random() * 10 - 5)));
            metrics.hail = Math.max(0, Math.min(100, metrics.hail + (Math.random() * 10 - 5)));
            updateMetrics();
        }, 12000);

        // Initial update
        updateMetrics();
    </script>
